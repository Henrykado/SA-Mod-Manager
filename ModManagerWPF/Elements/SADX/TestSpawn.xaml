<UserControl x:Class="SAModManager.Elements.SADX.TestSpawn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAModManager.Elements.SADX"
			 xmlns:elements="clr-namespace:SAModManager.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="636" d:DesignWidth="700">
	<UserControl.Resources>
		<ResourceDictionary>
			<elements:BoolFlipConverter x:Key="FlipBool"/>
			<ResourceDictionary x:Key="images" Source="../../Icons/Icons.xaml"/>
		</ResourceDictionary>
	</UserControl.Resources>
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="10"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="10"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="10"/>
		</Grid.RowDefinitions>
		<Border Margin="4,4,4,4" CornerRadius="2" Grid.ColumnSpan="3" Grid.RowSpan="3" BorderThickness="4" BorderBrush="{DynamicResource Borders.Brushes.Border}"/>

		<Grid Grid.Column="1" Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Grid Grid.Column="0" Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<CheckBox x:Name="tsCheckCharacter" Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Character}" VerticalAlignment="Center" Margin="5" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Character}" 
						  IsEnabled="{Binding ElementName=tsCheckManual, Path=IsChecked, Converter={StaticResource FlipBool}}" Checked="CheckBox_Checked"/>
				<ComboBox x:Name="tsComboCharacter" Grid.Column="1" Margin="5" VerticalAlignment="Center" IsEnabled="{Binding ElementName=tsCheckCharacter, Path=IsChecked}"/>
				<CheckBox x:Name="tsCheckLevel" Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Level}" Grid.Row="1" VerticalAlignment="Center" Margin="5" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Level}" 
						  IsEnabled="{Binding ElementName=tsCheckManual, Path=IsChecked, Converter={StaticResource FlipBool}}" Checked="CheckBox_Checked"/>
				<ComboBox x:Name="tsComboLevel" Grid.Column="1" Grid.Row="1" Margin="5" VerticalAlignment="Center" SelectionChanged="tsComboLevel_SelectionChanged" IsEnabled="{Binding ElementName=tsCheckLevel, Path=IsChecked}"/>
			</Grid>

			<Grid Grid.Column="1" Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Time}" Grid.Row="0" VerticalAlignment="Center" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Time}"/>
				<ComboBox x:Name="tsComboTime" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Margin="5" IsEnabled="{Binding ElementName=tsCheckLevel, Path=IsChecked}"/>
				<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Act}" Grid.Row="1" VerticalAlignment="Center" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Act}"/>
				<ComboBox x:Name="tsComboAct" Grid.Column="1" Grid.Row="1" Margin="5" VerticalAlignment="Center" IsEnabled="{Binding ElementName=tsCheckLevel, Path=IsChecked}"/>
			</Grid>

			<Grid x:Name="TestSpawnGrid" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Margin="-1,0,1,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="0"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<CheckBox x:Name="tsCheckEvent" Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Event}" Grid.Column="0" Grid.Row="0" Margin="5" VerticalAlignment="Center" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Event}" Click="tsCheckEvent_Click" Checked="CheckBox_Checked"/>
				<ComboBox x:Name="tsComboEvent" Grid.Column="1" Grid.Row="0" Margin="5" IsEnabled="{Binding ElementName=tsCheckEvent, Path=IsChecked}"/>

				<CheckBox x:Name="tsCheckGameMode" Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Mode}" Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" VerticalAlignment="Center" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.GameMode}" Checked="CheckBox_Checked"/>
				<ComboBox x:Name="tsComboGameMode" Grid.Column="1" Grid.Row="1" Margin="5" IsEnabled="{Binding ElementName=tsCheckGameMode, Path=IsChecked}"/>

				<CheckBox x:Name="tsCheckSave" Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Save}" Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" VerticalAlignment="Center" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Save}" Checked="CheckBox_Checked"/>
				<ComboBox x:Name="tsComboSave" Grid.Column="1" Grid.Row="2" Margin="5" IsEnabled="{Binding ElementName=tsCheckSave, Path=IsChecked}"/>

				<StackPanel Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center">
					<Image Source="{DynamicResource IconCaution}" Width="30"/>
					<TextBlock x:Name="textEventWarning" Text="{DynamicResource Manager.Tabs.TestSpawn.Warning}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5" FontStyle="Oblique" FontSize="18" TextWrapping="Wrap"/>
					<Image Source="{DynamicResource IconCaution}" Width="30"/>
				</StackPanel>

				<Expander x:Name="expandAdvanced" Header="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" HorizontalAlignment="Stretch" Margin="5">
					<Border x:Name="groupAdvanced" BorderBrush="{DynamicResource Borders.Brushes.Border}" BorderThickness="2" CornerRadius="3">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<CheckBox x:Name="tsCheckManual" Content="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced.Check.Manual}" Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" VerticalAlignment="Center" Click="tsCheckManual_Clicked" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Manual}"/>
							<Grid x:Name="gridTSLevelManual" Grid.Column="1" Grid.Row="0" Margin="5,5,5,5">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid Grid.Column="0" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Character}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumCharacter" Grid.Column="1" Height="22" MinWidth="50" MinValue="-1" MaxValue="8" IsEnabled="{Binding ElementName=tsCheckManual, Path=IsChecked}"/>
								</Grid>
								<Grid Grid.Column="1" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Check.Level}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumLevel" Grid.Column="1" Height="22" MinWidth="65" MinValue="-1" MaxValue="42" IsEnabled="{Binding ElementName=tsCheckManual, Path=IsChecked}"/>
								</Grid>
								<Grid Grid.Column="2" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Act}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumAct" Grid.Column="2" Height="22" MinWidth="65" MinValue="-1" MaxValue="7" IsEnabled="{Binding ElementName=tsCheckManual, Path=IsChecked}"/>
								</Grid>
							</Grid>

							<CheckBox x:Name="tsCheckPosition" Content="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced.Check.Position}" Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" VerticalAlignment="Center" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Position}"/>
							<Grid x:Name="gridTSPosition" Grid.Column="1" Grid.Row="1" Margin="5,5,5,5">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
								</Grid.ColumnDefinitions>
								<Grid Grid.Column="0" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced.PosX}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumPosX" Grid.Column="1" Height="22" MinWidth="65" ValueType="Float" IsEnabled="{Binding ElementName=tsCheckPosition, Path=IsChecked}"/>
								</Grid>
								<Grid Grid.Column="1" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced.PosY}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumPosY" Grid.Column="1" Height="22" MinWidth="65" ValueType="Float" IsEnabled="{Binding ElementName=tsCheckPosition, Path=IsChecked}"/>
								</Grid>
								<Grid Grid.Column="2" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced.PosZ}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumPosZ" Grid.Column="1" Height="22" MinWidth="65" ValueType="Float" IsEnabled="{Binding ElementName=tsCheckPosition, Path=IsChecked}"/>
								</Grid>
								<Grid Grid.Column="3" HorizontalAlignment="Right">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<Label Content="{DynamicResource Manager.Tabs.TestSpawn.Group.Advanced.Angle}" VerticalAlignment="Center"/>
									<elements:NumericUpDown x:Name="tsNumAngle" Grid.Column="1" Height="22" MinWidth="65" ValueType="Float" IsEnabled="{Binding ElementName=tsCheckPosition, Path=IsChecked}"/>
								</Grid>
							</Grid>
						</Grid>
					</Border>
				</Expander>
				<Button x:Name="btnTSLaunch" Content="{DynamicResource Manager.Tabs.TestSpawn.Buttons.Launch}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Margin="5,5,5,5" Height="50" Click="btnTestSpawnLaunchGame_Click" ToolTip="{DynamicResource MainWindow.Tips.Tab.TestSpawn.Launch}"/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
