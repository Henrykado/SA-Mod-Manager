<Window x:Class="SAModManager.Common.HealthChecker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAModManager.Common"
        mc:Ignorable="d" Style="{StaticResource SAWindowUtil}"
		WindowStartupLocation="CenterScreen"
        Title="HealthProgress" Height="200" Width="500">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="HealthText" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"
				   FontSize="24" TextWrapping="Wrap" Text="Health Check Text"/>

		<ProgressBar x:Name="HealthProgressBar" Grid.Row="1" Margin="20" />
	</Grid>
</Window>
